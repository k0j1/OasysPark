{
    "name": "MCHスカウター",
    "manifest_version": 3,
    "version": "0.1.2.43",
    "description": "マイクリ機能拡張",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "clipboardWrite",
        "contextMenus"
    ],
    "icons": {
        "64": "MCHScouter.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.mycryptoheroes.net/*/inventory/*",
                "https://www.mycryptoheroes.net/*/caps/*/team/*",
                "https://www.mycryptoheroes.net/*/templates/*",
                "https://www.mycryptoheroes.net/*/colosseums/*",
                "https://www.mycryptoheroes.net/*/teams/*"
            ],
            "js": [
                "popup/scouter.js",
                "popup/chart.umd.min.js",
                "popup/chartjs-plugin-datalabels.js"
            ]
        }
    ],
    "content_security_policy": {
        "script-src": ["self", "unsafe-inline"]
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }    
}